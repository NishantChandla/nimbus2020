<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.031"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cardWorkshop">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#000000"
                android:id="@+id/WorkshopImageID"

                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/workshopNameID"

                android:layout_height="wrap_content"
                android:text="Workshop Name"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/WorkshopImageID"/>
            <TextView
                android:id="@+id/WorkshopDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dated"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/WorkshopImageID"
                android:layout_below="@+id/workshopNameID"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workshopVenueID"
                android:text="Venue"
                android:layout_below="@+id/WorkshopDate"
                android:layout_toRightOf="@+id/WorkshopImageID"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>