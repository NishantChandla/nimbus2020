<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.Add_Exhibition">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addImgExh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fui_ic_anonymous_white_24dp"
        android:backgroundTint="#000000"
        android:paddingTop="10dp" />


    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addImgExh"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:hint="Please enter name of Exhibition"
        android:inputType="text"
        android:id="@+id/NameAddExh"
        android:padding="20sp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameAddExh"
        android:id="@+id/infoAddExh"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add info related to Exhibition"
        android:inputType="textMultiLine"
        android:padding="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoAddExh"
        android:id="@+id/venueAddExh"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add venue of exhibition"
        android:inputType="text"
        android:padding="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venueAddExh"
        android:id="@+id/dateAddExh"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add date of exhibition"
        android:inputType="datetime"
        android:padding="20dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateAddExh"
        android:id="@+id/addregUrlExh"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Please add regUrl for the exhibition"
        android:inputType="textWebEditText"
        android:padding="20dp"/>

    <Button
        android:id="@+id/AddButtonExh"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addregUrlExh"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#FDFAFA"
        android:background="@drawable/buttob"
        android:padding="20dp"
        android:text="ADD"
        android:textAllCaps="false"
        android:backgroundTint="#0A0709"
        android:textStyle="bold|italic"
        android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>
